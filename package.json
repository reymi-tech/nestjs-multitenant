{
  "name": "@reymi-tech/nestjs-multitenant",
  "version": "1.0.0",
  "description": "A comprehensive multi-tenant solution for NestJS applications with PostgreSQL schema-per-tenant architecture",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc --watch",
    "prepublishOnly": "node --run build && node --run test:unit",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "rimraf coverage .nyc_output && node --run test:unit && node --run calculate-global-test-coverage",
    "test:unit": "vitest run --coverage --config ./vitest.config.unit.ts",
    "calculate-global-test-coverage": "tsx scripts/calculate-global-test-coverage.ts",
    "prepare": "husky || true",
    "publish:public": "npm publish --access public",
    "release:patch": "npm version patch -m 'chore: release v%s'",
    "release:minor": "npm version minor -m 'chore: release v%s'",
    "release:major": "npm version major -m 'chore: release v%s'"
  },
  "engines": {
    "node": ">=22.x",
    "pnpm": ">=10.x"
  },
  "keywords": [
    "nestjs",
    "multi-tenant",
    "postgresql",
    "schema-per-tenant",
    "typeorm",
    "microservices"
  ],
  "author": "Luis Enrique <lmorochofebres@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reymi-tech/nestjs-multitenant.git"
  },
  "peerDependencies": {
    "@nestjs/common": "^11.1.7",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.7",
    "@nestjs/mapped-types": "^2.1.0",
    "@nestjs/typeorm": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express": "^5.1.0",
    "fastify": "^5.6.1",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@eslint/compat": "^1.4.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@types/express": "^5.0.4",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.9.1",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unicorn": "^61.0.2",
    "fs-extra": "^11.3.2",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.6",
    "nyc": "^17.1.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12",
    "vitest": "^4.0.3",
    "vitest-mock-extended": "^3.1.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "packageManager": "pnpm@10.19.0"
}
